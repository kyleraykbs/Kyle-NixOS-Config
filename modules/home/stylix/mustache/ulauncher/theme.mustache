@import url("./reset.css");

/**
 * App Window
 */
@define-color bg_color @base00;
@define-color window_shadow rgba(0, 0, 0, 0.5);
@define-color window_bg @bg_color;
@define-color window_border_color @base0B;
@define-color prefs_backgroud @base00;

/**
 * Input
 */
@define-color selected_bg_color @base02;
@define-color selected_fg_color @base0B;
@define-color input_color @base05;
@define-color caret_color darker(@input_color); /* what are these for? */

/**
 * Result items
 */
@define-color item_name @base05;
@define-color item_text @base06;
@define-color item_box_selected @base02;
@define-color item_name_selected @base0B;
@define-color item_text_selected @base0B;
@define-color item_shortcut_color @base04;
@define-color item_shortcut_shadow darker(@bg_color);
@define-color item_shortcut_color_sel @base0B;
@define-color item_shortcut_shadow_sel darker(@item_box_selected);

.app {
    box-shadow: 0 0 5px @window_shadow;
    background-color: @window_bg;
    border: 1px solid @window_border_color;
    border-radius: 4px;
}


.input {
    color: @input_color;
    font-size: 170%;
    padding: 5px 0 5px 7px;
}

/**
 * Selected text in input
 */
.input *:selected,
.input *:focus,
*:selected:focus {
    background-color: alpha (@selected_bg_color, 0.9);
    color: @selected_fg_color;
}

.item-text {
    color: @item_text;
}
.item-name {
    color: @item_name;
    font-size: 120%;
}

.selected.item-box {
    background-color: @item_box_selected;
    border-left: 1px solid @window_border_color;
    border-right: 1px solid @window_border_color;
}
.selected.item-box .item-text {
    color: @item_text_selected;
}
.selected.item-box .item-name {
    color: @item_name_selected;
}
.item-shortcut {
    color: @item_shortcut_color;
    text-shadow: 1px 1px 1px @item_shortcut_shadow;
}
.selected.item-box .item-shortcut {
    color: @item_shortcut_color_sel;
    text-shadow: 1px 1px 1px @item_shortcut_shadow_sel;
}

.item-descr {
    font-size: 80%;
}


/**
 * Small result item
 */
.small-result-item .item-name {
    font-size: 100%;
}

.prefs-btn {
    border-radius: 12px;
    opacity: 0.8;
}
.prefs-btn:hover {
    background-color: @prefs_backgroud;
}

.no-window-shadow {
    margin: -20px;
}
